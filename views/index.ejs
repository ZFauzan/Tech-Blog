<body>
  <div class="container">
    <h1>Welcome to the Tech Blog!</h1>
    <a id="newPostBtn" href="/new">New Post</a>
    <ul id="postsList">
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <%=post.date %>
          </small>
          <% if (post.content.length > 200) { %>
              <p> 
                <%= post.content.substring(0,200) + " ..." %> 
                <a class="readMore" href="/read-more/<%= post.id %>">[Read More]</a>
              </p>
          <% } else { %> 
                <p> <%= post.content %> </p>
          <% } %>
          <small>By: <%=post.author%> </small>

          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
        </li>
        <% }); %>
    </ul>
  </div>

<%- include("partials/footer.ejs") %>
</body>

</html>

